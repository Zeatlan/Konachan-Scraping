  "compilerOptions": {
    "target": "es6",
    "module": "node16",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
